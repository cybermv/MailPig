@model IEnumerable<MailPig.BL.Models.SubscriberHistoryModel>

@{
    ViewBag.Title = "Povijest pretplatnika";
}

<h2>Povijest pretplatnika @ViewBag.NameSurname - @ViewBag.Email</h2>

<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped table-hover table-responsive">
            <tr>
                <th>Naziv grupe</th>
                <th>Datum pridruživanja</th>
                <th>Datum odlaska</th>
            </tr>

            @foreach (var entry in Model)
            {
                <tr class="@(entry.DateLeft.HasValue ? "warning" : "info")">
                    <td>@entry.GroupName</td>
                    <td>@entry.DateJoined</td>
                    <td>@entry.DateLeft</td>
                </tr>
            }
        </table>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <a class="btn btn-warning" href="@Url.Action("Index", "Subscribers")"><i class="glyphicon glyphicon-chevron-left"></i> Povratak</a>
    </div>
</div>