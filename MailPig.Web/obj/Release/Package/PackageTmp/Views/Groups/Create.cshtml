@model MailPig.BL.Models.GroupModel
@{
    ViewBag.Title = "Kreiranje nove grupe";
}

@using (Html.BeginForm("Create", "Groups", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <h2>Kreiranje nove grupe</h2>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a class="btn btn-warning" href="@Url.Action("Index", "Groups")"><i class="glyphicon glyphicon-chevron-left"></i> Odustani</a>
            <a class="btn btn-success" onclick="submitForm(this)"><i class="glyphicon glyphicon-check"></i> Kreiraj</a>
        </div>
    </div>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function submitForm(elem) {
            $(elem).closest('form').submit();
        }
    </script>
}